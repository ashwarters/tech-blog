<article class="post">
  <div class="title">

    <a href="{{post.post_url}}" target="_blank">{{post.name}}</a>
    <span>({{post.post_url}})</span>
  </div>


  <div class="meta">
   {{post.user.username}} |
    <a href="/post/{{post.id}}">{{post.comments.length}} Comments: </a>

  </div>
</article>

{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit"> Add Comment</button>

  </div>
</form>
{{/if}}

{{> comments post.comments}}

{{#if loggedIn}}
<script src="/js/comment.js"></script>
{{/if}}