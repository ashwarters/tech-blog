<article>
  <a class="dashboard-btn" href="/dashboard"> &larr; Return to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-form">
    <div>
      <input name="post-title" type="text" value="{{post.title}}" />
      {{#if post.reference_url}}
      <span>({{post.reference_url}})</span>
      {{/if}}
    </div>
    <div>
      Created by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit">Save post</button>
    <button type="button" class="delete-btn">Delete post</button>
  </form>
</article>

<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">Add a comment</button>
  </div>
</form>

{{> comments post.comments}}

<script src="/js/edit-post.js"></script>
<script src="/js/delete.js"></script>
<script src="/js/comment.js"></script>